@{
    Layout = "_ConfigurePlugin";
}
@model ConfigurationModel
@using Nop.Plugin.Payments.Sermepa.Models;

<form asp-controller="PaymentSermepa" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="NombreComercio" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="NombreComercio" />
                        <span asp-validation-for="NombreComercio"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Titular" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Titular" />
                        <span asp-validation-for="Titular"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Producto" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Producto" />
                        <span asp-validation-for="Producto"></span>
                    </div>
                </div>

                <hr />

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="FUC" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="FUC" />
                        <span asp-validation-for="FUC"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Terminal" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Terminal" />
                        <span asp-validation-for="Terminal"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Moneda" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Moneda" />
                        <span asp-validation-for="Moneda"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ClaveReal" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ClaveReal" />
                        <span asp-validation-for="ClaveReal"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ClavePruebas" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ClavePruebas" />
                        <span asp-validation-for="ClavePruebas"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Pruebas" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Pruebas" />
                        <span asp-validation-for="Pruebas"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="AdditionalFee" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AdditionalFee" />
                        <span asp-validation-for="AdditionalFee"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        &nbsp;
                    </div>
                    <div class="col-md-9">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
